<%= form_for @diary, :html => {:id => "commentform"}  do |f| %> 
   <p>
	  <%= f.label :title,raw("标题 Title (required)&nbsp;&nbsp;&nbsp;<font color=red id=error_diary_title></font>") %>
	  <%= f.text_field :title %>
	</p>

	<p>
	  <%= f.label :category,"类别  Category (required)" %>
      <%= f.text_field :category %>
	</p>

	<p>
	  <%= f.label :media,"图片，视频，音乐 Image,Vedio,Music" %>
    <%= f.file_field :media %>
    <%= image_tag @diary.media.url(:medium) %>
	</p>

	<p>
	  <%= f.label :content,"内容 Comment" %>
	  <%= f.text_area :content,:rows => "10"%>
    </p>

	<p>
	  <input name="submit" type="submit" id="submit" tabindex="5" value="POST COMMENT" />
	</p>
	
<% end %>