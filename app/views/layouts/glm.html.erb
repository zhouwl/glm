<script type="text/javascript" charset="utf-8">
	if($.cookie("css_skin")!=null){
    change_css($.cookie("css_skin"));
  }
  function change_css(name){
		var	csshref="/stylesheets/web-app-theme/themes/"+ name +"/style.css" 
		csshref=$("#skin").attr("href",csshref) 
		$.cookie("css_skin",name)   
  }
