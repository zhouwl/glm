  <%= stylesheet_link_tag "web-app-theme/base", "web-app-theme/override", :cache => true %>
  <link href="/stylesheets/web-app-theme/themes/Orange/style.css" media="screen" rel="stylesheet" type="text/css" id="skin"/>
<link href="/javascripts/menu.css" media="screen" rel="stylesheet" type="text/css" />
  <%= javascript_include_tag "jquery", "jquery.cookie",:cache => true %>
